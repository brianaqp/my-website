---
import "../styles/global.css";
import AboutMe from "../components/aboutme.astro"
import Footer from "../components/footer.astro"
---

<!-- About Me section at the top -->
<AboutMe />

<!-- Roles board below About Me -->
<div class="flex h-full justify-around items-center gap-4 mt-8 md:max-w-5/12 mx-auto">
  <div class="role-card unlocked">
    <span class="role-title">Software Engineer</span>
    <span class="role-status text-blue-100">Unlocked!</span>
  </div>
  <div class="role-card locked" title="Not unlocked yet!">
    <span class="role-title">Videogame Creator</span>
    <span class="role-status hidden group-hover:block text-gray-100">Not unlocked yet!</span>
  </div>
  <div class="role-card locked" title="Not unlocked yet!">
    <span class="role-title">Musician</span>
    <span class="role-status hidden group-hover:block text-gray-100">Not unlocked yet!</span>
  </div>
</div>

<Footer />


<style>
    @reference "../styles/global.css";

    .role-active {
        @apply transition-all hover:text-3xl font-bold
    }
    .role-card {
        @apply flex flex-col items-center px-4 py-2 rounded-xl shadow transition-all;
    }
    .role-card.unlocked {
    @apply bg-blue-500 border-2 border-blue-500;
    }
    .role-card.locked {
    @apply bg-gray-400 border-2 border-gray-400 opacity-80 cursor-not-allowed;
    }
    .role-title {
    @apply text-xl font-bold mb-1;
    }
    .role-status {
    @apply text-sm;
    }
    .role-card.locked:hover .role-status {
    @apply block;
    }
</style>